{
  "manifest_version": 3,
  "name": "Coupon Finder Pro",
  "version": "1.0.0",
  "description": "Otomatik olarak en iyi kuponları bulur ve e-ticaret sitelerinde uygular. Alışverişte tasarruf edin!",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Coupon Finder Pro"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.trendyol.com/*",
    "*://*.hepsiburada.com/*",
    "*://*.n11.com/*",
    "*://*.gittigidiyor.com/*",
    "*://*.amazon.com.tr/*",
    "*://*.amazon.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.trendyol.com/*",
        "*://*.hepsiburada.com/*",
        "*://*.n11.com/*",
        "*://*.gittigidiyor.com/*",
        "*://*.amazon.com.tr/*",
        "*://*.amazon.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
